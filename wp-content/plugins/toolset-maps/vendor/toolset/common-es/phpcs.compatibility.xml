<?xml version="1.0"?>
<ruleset name="ToolsetPHP">
	<description>Toolset PHP Compatibility Standards</description>

	<exclude-pattern>*/__test__/*</exclude-pattern>
	
	<config name="testVersion" value="5.6-"/>
	<config name="installed_paths" value="../../phpcompatibility/php-compatibility,../../phpcompatibility/phpcompatibility-paragonie,../../phpcompatibility/phpcompatibility-wp,../../automattic/vipwpcs,../../wp-coding-standards/wpcs/" />

	<rule ref="PHPCompatibilityWP">
        <exclude name="PHPCompatibility.PHP.DefaultTimezoneRequired.Missing"/>
    </rule>

    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>

    <file>./server</file>
</ruleset>

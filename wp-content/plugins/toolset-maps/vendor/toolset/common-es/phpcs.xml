<?xml version="1.0"?>
<ruleset name="Toolset-Common-ES">
	<description>Toolset Coding Standards</description>

	<rule ref="Toolset"/>

	<exclude-pattern>*/autoload_classmap.php</exclude-pattern>
	<exclude-pattern>\.(css|js)</exclude-pattern>
	<exclude-pattern>*/__test__/*</exclude-pattern>

	<file>./server</file>

	<!-- No need to follow a green halbling. -->
	<rule ref="WordPress.PHP.YodaConditions">
		<severity>0</severity>
	</rule>

	<!-- Allow assignments in conditions. -->
	<rule ref="Squiz.PHP.DisallowMultipleAssignments">
		<severity>0</severity>
	</rule>

</ruleset>
